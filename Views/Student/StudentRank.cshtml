@model List<StudentManagement.Data.Mark>

@{
    ViewData["Title"] = "View Students";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="text-center card-header">
                    <h2 class="display-7 text-light">Student Rank</h2>
                    @if (Model.Count > 0)
                    {
                        <img src="/images/cup-2.gif" alt="Rank 1"
                             style="vertical-align: middle; width: 100px; height: auto; margin-right: 5px;" />
                       
                        <span class="font-weight-bold"> <h3>1st rank </h3>@Model[0].Name</span>
                    }
                </div>
                <div class="card-body p-3">
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Rank</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 1; i < Model.Count; i++)
                                {
                                    var student = Model[i];
                                    <tr>
                                        <td></td>
                                        <td>@student.Name</td>
                                        <td>@(i + 1)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["SearchError"] != null)
{
    <div class="alert alert-danger">@TempData["SearchError"]</div>
}
