@model StudentManagement.Data.Mark

@{
    ViewData["Title"] = "Student Marks";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="text-begin card-header">
                    <h2 class="display-7">Student Marks</h2>
                </div>
                <div class="card-body p-3"><div style="max-height: 300px; overflow-y: auto;">
                    <h4 class="card-title text-center">Name: @Model.Name</h4>
                    <p class="card-text">Class: @Model.Class</p>
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Marks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Subject1Name</td>
                                <td>@Model.Subject1</td>
                            </tr>
                            <tr>
                                <td>@Model.Subject2Name</td>
                                <td>@Model.Subject2</td>
                            </tr>
                            <tr>
                                <td>@Model.Subject3Name</td>
                                <td>@Model.Subject3</td>
                            </tr>
                            <tr>
                                <td>@Model.Subject4Name</td>
                                <td>@Model.Subject4</td>
                            </tr>
                            <tr>
                                <td>@Model.Subject5Name</td>
                                <td>@Model.Subject5</td>
                            </tr>
                            <tr>
                                <td>@Model.Subject6Name</td>
                                <td>@Model.Subject6</td>
                            </tr>
                            <!-- Add more rows for other subjects -->
                            <tr>
                                <td>Total Marks</td>
                                <td>@Model.Total</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center d-flex justify-content-around">
                    <a class="btn btn-warning" asp-controller="Staff" asp-action="EditMarks"
                           asp-route-studentId="@Model.ID">Edit</a>
                    <form method="post" asp-controller="Staff" asp-action="DeleteMarks">
                        <input type="hidden" name="studentId" value="@Model.ID" />
                        <button type="submit" class="btn btn-warning">Delete</button>
                    </form>
                    <a class="btn btn-warning" asp-controller="Staff" asp-action="AddMarks">Back</a>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
