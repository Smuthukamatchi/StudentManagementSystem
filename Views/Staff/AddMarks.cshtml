@model List<StudentManagement.Data.Identity>

@{
    ViewData["Title"] = "Add Marks";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="text-begin card-header">
                    <h2 class="display-7 text-light">Add Marks</h2>
                </div>
                <div class="card-body p-3" style="max-height: 400px; overflow-y: auto;">
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Class</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var student in Model)
                                {
                                    <tr>
                                        <td>@student.ID</td>
                                        <td>@student.Name</td>
                                        <td>@student.Class</td>
                                        <td>
                                            <a class="btn btn-warning" asp-controller="Staff" asp-action="Marks" asp-route-class="@student.Class" asp-route-id="@student.ID">Add Marks</a>
                                            <a class="btn btn-primary" asp-controller="Staff" asp-action="ViewMarks" asp-route-id="@student.ID" asp-route-name="@student.Name">View Marks</a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["SearchError"] != null)
{
    <div class="alert alert-danger">@TempData["SearchError"]</div>
}

