@model List<StudentManagement.Data.Identity>

@{
    ViewData["Title"] = "View Students";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="text-begin card-header">
                    <h2 class="display-7 text-light">View Students</h2>
                </div>
                <div class="card-body p-3">
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Class</th>
                                    <th>Blood Group</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td>@student.Name</td>
                                        <td>@student.Class</td>
                                        <td>@student.BloodGroup</td>
                                        <td>
                                            <!-- You can modify the action and route parameters based on your application's structure -->
                                            <a class="btn btn-warning" asp-controller="Staff" asp-action="ViewStudentDetails" asp-route-id="@student.ID">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["SearchError"] != null)
{
    <div class="alert alert-danger">@TempData["SearchError"]</div>
}
