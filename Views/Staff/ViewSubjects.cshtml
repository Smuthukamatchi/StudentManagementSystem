@model List<StudentManagement.Data.Subject>

@{
    ViewData["Title"] = "View Subjects";
    Layout = "~/Views/Shared/_PrincipalLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="/css/employee.css" />
</head>
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card bg-dark text-light">
                <div class="text-begin card-header">
                    <h2 class="display-7 text-light">Subjects</h2>
                </div>
                <div class="card-body p-3">
                    <div class="mb-3 text-center">
                        <form method="get" action="@Url.Action("ViewSubjects")">
                            <div class="row justify-content-center"> 
                                <div class="col-auto">
                                    <div class="input-group">
                                        <input type="text" name="searchClass" class="form-control rounded-pill bg-dark text-light" placeholder="Enter class to search" style="width: 400px;" />
                                        <div class="p-2"></div>
                                        <button type="submit" class="btn btn-primary rounded"> Find</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th class="p-1">Class List</th>
                                    <th class="p-1">Subject 1</th>
                                    <th class="p-1">Subject 2</th>
                                    <th class="p-1">Subject 3</th>
                                    <th class="p-1">Subject 4</th>
                                    <th class="p-1">Subject 5</th>
                                    <th class="p-1">Optional Subject</th>
                                    <th class="p-1">
                                    </th>
                                    <!-- Repeat the above code for Subject 2 to Subject 6 -->
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var subject in Model)
                                {
                                    <tr>
                                        <td>@subject.Class</td>
                                        <td>@subject.Subject1</td>
                                        <td>@subject.Subject2</td>
                                        <td>@subject.Subject3</td>
                                        <td>@subject.Subject4</td>
                                        <td>@subject.Subject5</td>
                                        <td>@subject.Subject6</td>

                                        <td class="d-flex justify-content-around">
                                            <a class="btn btn-warning" asp-controller="Staff" asp-action="EditSubject" asp-route-subjectId="@subject.subjectId">Edit</a> 
                                            <form asp-controller="Staff" asp-action="DeleteSubject" method="post">
                                                <input type="hidden" name="subjectId" value="@subject.subjectId" />
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["SearchError"] != null)
{
    <div class="alert alert-danger">@TempData["SearchError"]</div>
}
